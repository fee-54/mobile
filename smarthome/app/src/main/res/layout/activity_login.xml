<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#9AC7D9"
    tools:context=".Activities.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:onClick="Gosignup"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/GoBackIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="goback"
            android:src="@drawable/ic_arrow_back_black_24dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:gravity="end"
            android:textColor="@color/blackcolor"
            android:textSize="21dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Login To Your Home"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/dab"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="UnusedAttribute" />
        <RelativeLayout
            android:id="@+id/imgg"
            android:layout_width="220dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/lolo" />
        </RelativeLayout>

        <EditText
            android:id="@+id/name_login"
            android:layout_width="285dp"
            android:layout_height="50dp"
            android:hint="User Name"
            android:elevation="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:paddingLeft="15dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/btn"
            tools:ignore="RtlHardcoded,RtlSymmetry,UnusedAttribute"
            android:importantForAutofill="no" />
        <EditText
            android:id="@+id/passlogin"
            android:layout_width="285dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:elevation="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:background="@drawable/btn"
            android:paddingStart="15dp"
            tools:ignore="RtlSymmetry,UnusedAttribute" />
        <CheckBox
            android:id="@+id/remeber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remember_me"
            android:textSize="16sp"
            android:clickable="true"
            android:buttonTint="#3370A6"
            android:shadowColor="#3370A6"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:focusable="true"
            tools:ignore="UnusedAttribute" />


        <Button
            android:id="@+id/loginbtn"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="27dp"
            android:text="@string/log_in"
            android:textAllCaps="false"
            android:onClick="login"
            android:background="@drawable/joinbtn"
            android:textColor="@color/whitecolor"/>


        <TextView
            android:id="@+id/forgetpass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#3370A6"
            android:textSize="18sp"
            android:layout_marginTop="13dp"
            android:text="Forget password ?"
            android:onClick="forgetpassword"


            />
    </LinearLayout>

</LinearLayout>