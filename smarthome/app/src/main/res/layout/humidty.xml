<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layoutDirection="ltr"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temper"
        android:layout_marginTop="8dp"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

    <RelativeLayout
            android:id="@+id/tempdegree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/temptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textSize="22sp"
            android:textColor="@color/dab"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/degtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="deg"
            android:layout_below="@+id/temptext"
            android:textColor="@color/dab"
            android:textSize="18sp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="120dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dab"
            android:layout_below="@+id/degtext"
            android:text="10"
            android:textSize="100sp"
            android:textStyle="bold"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="12dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_toRightOf="@+id/tempdegree"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/humidText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humadity"
            android:textSize="22sp"
            android:textColor="@color/dab"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"/>


        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:layout_below="@+id/humidText"
            android:textColor="@color/dab"
            android:textSize="22sp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="130dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dab"
            android:layout_below="@+id/percent"
            android:text="20"
            android:textSize="100sp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"/>
                </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>